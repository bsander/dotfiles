#!/usr/bin/env bash

## http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
# set -x

## Fully resolve base directory: http://stackoverflow.com/a/246128
# shellcheck disable=SC2030
ACTION="${1:-default}"
shift || :

(
  cd "$DOTFILES" && \
  "repos/dotbot/bin/dotbot" \
    -d "$DOTFILES" \
    -c "actions/$ACTION.yml" \
    "$@"
)
