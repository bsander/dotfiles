layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane name="editor" focus=true {
                command "nvim"
            }
            pane size="33%" name="claude" {
                command "claude"
            }
        }
    }
}